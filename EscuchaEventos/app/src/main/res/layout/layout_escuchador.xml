<?xml version="1.0" encoding="utf-8"?>
<com.example.escuchaeventos.LayoutEscuchador xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.escuchaeventos.VistaEscuchadora
        android:id="@+id/tv_Pulsa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="#cabaff"
        android:gravity="center_horizontal|center_vertical"
        android:hint="@string/tvPulsa"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_Pulsa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</com.example.escuchaeventos.LayoutEscuchador>